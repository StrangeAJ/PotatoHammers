<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LightWite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D09999</item>
        <item name="android:windowBackground">@drawable/light_bg</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionBarSize">40dp</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="darktextcard" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#F96363</item>
    </style>
    <style name="switch2" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:hint">ON/OFF</item>
        <item name="hintTextColor">#4FBB6B</item>
        <item name="trackTint">#9AC1A4</item>
        <item name="thumbTint">#4FBB6B</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Widget.MaterialComponents.CardView." parent="Base.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="elevation">20dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="iconImageBulb" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_margin">5dp</item>
        <item name="tint">#FFC800</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>
    <style name="iconImageFen" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_margin">5dp</item>
        <item name="tint">#4FBB6B</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>
    <style name="iconImageTemp" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_margin">5dp</item>
        <item name="tint">#F96363</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>
    <style name="toggleGrp" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">#F1ECEE</item>
        <item name="strokeWidth">2.5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">#4FBB6B</item>
        <item name="android:layout_weight">1</item>
        <item name="rippleColor">#BF360C</item>
    </style>
    <style name="switch1" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:hint">ON/OFF</item>
        <item name="trackTint">#FFECB3</item>
        <item name="thumbTint">#FBC02D</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="slideer" parent="Widget.MaterialComponents.Slider">
        <item name="trackColorInactive">#FFFFFF</item>
        <item name="trackColorActive">#A04FBB6B</item>
    </style>
    <style name="TextView_ofList" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SubTextView_ofList" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#404040</item>
    </style>
    <style name="bg_ofFragment" parent="CardView">
        <item name="android:background">@color/white</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/black</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/black</item>
    </style>
    <style name="LayoutCard">
        <item name="android:background">@drawable/light_gradient</item>
    </style>
    <style name="iconImageDevice" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="tint">#000000</item>
    </style>
    <string name="mode">Day</string>

</resources>